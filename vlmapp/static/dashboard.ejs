<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="./css/dash.css">
    <link rel="stylesheet" href="./css/boot/bootstrap.min.css">
    <!-- <script type="module" src="./js/dash.js"></script> -->
    <script>
        document.addEventListener('DOMContentLoaded',()=>{
            let menu= document.querySelector(".menuToggle")
            let nav = document.querySelector('.sidebar')
    
            menu.onclick = function(){
                nav.classList.toggle('vlmopen');
                
            }
            const list = document.querySelectorAll('.list');
            function vlm(){
                list.forEach((item)=>
                item.classList.remove('active'))
                this.classList.add('active')
            }
            const vlmcont = document.querySelector('.content');
            const products = document.querySelector('.vlmproducts');
            const home = document.querySelector('.vlmhome');
            const blogs = document.querySelector('.blogs');

            const customers = document.querySelector('.customers');

            const Analytics = document.querySelector('.null');

            const inbox = document.querySelector('.inbox');
            const reports = document.querySelector('.reports');

            products.addEventListener('click',()=>{
                vlmcont.innerHTML=`
                <div class="all">
                    <h2>products</h2>
                    my product content
                    <%= user %>
                </div>
                `
            })

           blogs.addEventListener('click',()=>{
                vlmcont.innerHTML=`
                <div class="all">
                    <h2>blogs</h2>
                    my blogs content
                </div>
                `
            })
            customers.addEventListener('click',()=>{
                vlmcont.innerHTML=`
                <div class="all">
                    <h2>customers</h2>
                    my customers content
                </div>
                `
            })

            Analytics.addEventListener('click',()=>{
                vlmcont.innerHTML=`
                <div class="all">
                    <h2>analysis</h2>
                    my analysis content
                </div>
                `
            })

            inbox.addEventListener('click',()=>{
                vlmcont.innerHTML=`
                <div class="all">
                    <h2>inbox</h2>
                    my inboxt content
                </div>
                `
            })

           reports.addEventListener('click',()=>{
                vlmcont.innerHTML=`
                <div class="all">
                    <h2>reports</h2>
                    my report content
                </div>
                `
            })
            home.addEventListener('click',()=>{
                vlmcont.innerHTML=`
                <div class="all">
                    <h1>Dashboard</h1>
                    <div class="main">
                        <div class="cards"></div>
                        <div class="cards"></div>
                        <div class="cards"></div>
                        <div class="cards"></div>
                        <div class="cards"></div>
                        <div class="cards"></div>
                    </div>
                </div>

                `

            })
            home.click()
            list.forEach((item)=>item.addEventListener('click',vlm))

        })
    </script>
</head>
<body>

      <!--header area start-->
      <header>
        <div class="right_area">
          <a href="/logout" class="logout_btn">Logout</a>
        </div>
      </header>
      <!--header area end-->
      <!--mobile navigation bar start-->
      <div class="mobile_nav">
          <div class="nav_bar">
              <img src="./img/vlm.png" class="mobile_profile_image" alt="">
              <div class="menu"></div>
            </div>
        </div>
      
      <!--mobile navigation bar end-->
      <!--sidebar start-->
      <div class="sidebar"> 
        <div class="profile_info">
          <img src="./img/vlm.png" class="profile_image" alt="">
          <h4><%= user %></h4>

        <!-- add your ul here -->
        <div class="menuToggle"></div>
        <ul>
              <li class="list active vlmhome" style="--clr:#092e35;" >
                  <a href="#">
                      <span class="icon">
                          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                      </span>
                      <span class="text">Home</span>
                  </a>
              </li>
      
              <li class="list vlmproducts" name="products" style="--clr:#142cc5;">
                  <a href="#" >
                      <span class="icon">
                          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-shopping-bag"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path><line x1="3" y1="6" x2="21" y2="6"></line><path d="M16 10a4 4 0 0 1-8 0"></path></svg>
                      </span>
      
