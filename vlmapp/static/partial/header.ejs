  document.addEventListener("DOMContentLoaded", function() {
      // JavaScript code to update the clock every second
  function updateClock() {
    const now = new Date(); // Get the current time
  
    // Calculate the rotation angle for each clock hand
    const hours = now.getHours();
    const minutes = now.getMinutes();
    const seconds = now.getSeconds();
    const hourAngle = (hours % 12) / 12 * 360 + minutes / 60 * 30;
    const minuteAngle = minutes / 60 * 360;
    const secondAngle = seconds / 60 * 360;
  
    // Update the CSS transform property of each clock hand
    const hourHand = document.getElementById("hr");
    hourHand.style.transform = `rotateZ(${hourAngle}deg)`;
    const minuteHand = document.getElementById("mn");
    minuteHand.style.transform = `rotateZ(${minuteAngle}deg)`;
    const secondHand = document.getElementById("sc");
    secondHand.style.transform = `rotateZ(${secondAngle}deg)`;
        // set other time
        const hour = document.getElementById("hour");
        const min = document.getElementById("minutes");
        const sec = document.getElementById("seconds");
        const amp= document.getElementById("ampm");
    
    
        let h = new Date().getHours(); 
        let m = new Date().getMinutes(); 
       let s = new Date().getSeconds(); 
    
       let am =h >= 12 ? "PM":"AM";
        if(h>12){
          h=h-12;
        }

        h=(h<10) ? "0" + h:h 
        m=(m<10) ? "0" + m:m 
        s=(s<10) ? "0" + s:s 
    
        hour.innerHTML=h;
        min.innerHTML=m;
        sec.innerHTML=s;
        amp.innerHTML=am;
  }
  setInterval(updateClock,1000) 

});
